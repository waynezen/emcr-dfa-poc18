            */
        }
        table {
            border-collapse: collapse;
        }
        td, th {
            border: 1px solid #1d1212;
            padding: 0.5rem;
            text-align: left;
        }
    </style>
</head>

<body>
    <div class="page">

        <h1 style="color: cornflowerblue">Application &amp; Insurance</h1>
        <br />

        <table>
            <tr>
                <td width="25%">
                    Application Type:
                </td>
                <td>
                    {{applicationType}}

                </td>
            </tr>
            <tr>
                <td width="20%">
                    Do you have Insurance?
                </td>
                <td>
                    {{hasInsurance}}
                </td>
            </tr>
        </table>

        <hr />
        <h1 style="color: cornflowerblue">Damaged Property</h1>
        <br />

        <table>
            <tr>
                <td width="25%">
                    <strong>Address Line One:</strong>
                </td>
                <td>
                    {{dmgAddressLine1}}
                </td>
            </tr>
            <tr>
                <td width="25%">
                    <strong>Address Line Two:</strong>
                </td>
                <td>
                    {{dmgAddressLine2}}
                </td>
            </tr>
            <tr>
                <td width="25%">
                    <strong>City</strong>
                </td>
                <td>
                    {{dmgCity}}
                </td>
            </tr>
            <tr>
                <td width="25%">
                    <strong>Province</strong>
                </td>
                <td>
                    {{dmgProvince}}
                </td>
            </tr>
            <tr>
                <td width="25%">
                    <strong>Description</strong>
                </td>
                <td>
                    {{dmgDescription}}
                </td>
            </tr>
            <tr>
                <td colspan="4">
                    <table>
                        <thead>

                        </thead>
                        <tbody>
                            <tr>
                                {{#arraysig signatures 0}}
                                <td width="25%">
                                    <strong>Signature1</strong>
                                </td>
                                <td width="25%">
                                    <p>
                                        {{#each this}}
                                        <strong>{{@key}}</strong> &nbsp; {{@value}}
                                        {{/each}}
                                    </p>
                                </td>
                                {{/arraysig}}

                                {{#arraysig signatures 1}}
                                <td width="25%">
                                    <strong>Signature2</strong>
                                </td>
                                <td width="25%">
                                    <p>
                                        {{#each this}}
                                        <strong>{{@key}}</strong> &nbsp; {{@value}}
                                        {{/each}}
                                    </p>
                                </td>
                                {{/arraysig}}
                            </tr>
                        </tbody>
                    </table>
                </td>  <!--colspan=2-->
            </tr>
        </table>
    </div>


</body>

</html>